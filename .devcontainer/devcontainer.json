{
  "name": "BuildFit Development Environment",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:0-18",
  
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers-contrib/features/postgres:1": {
      "version": "12"
    }
  },

  "forwardPorts": [3000, 8081, 5432],
  "portsAttributes": {
    "3000": {
      "label": "Backend API",
      "onAutoForward": "notify"
    },
    "8081": {
      "label": "Metro Bundler",
      "onAutoForward": "notify"
    },
    "5432": {
      "label": "PostgreSQL Database",
      "onAutoForward": "silent"
    }
  },

  "postCreateCommand": "npm run install:all",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-eslint",
        "ms-vscode.js-debug",
        "bradlc.vscode-tailwindcss",
        "ms-vscode.vscode-json",
        "ms-vscode-remote.remote-containers"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "typescript.preferences.importModuleSpecifier": "relative",
        "typescript.suggest.autoImports": true
      }
    }
  },

  "initializeCommand": "echo 'Initializing BuildFit development environment...'",
  "postStartCommand": ".devcontainer/postStart.sh",

  "remoteUser": "node"
}